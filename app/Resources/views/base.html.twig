<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        {% block title %}<title>Home page</title>{% endblock %}
        {% block meta_description %}{% endblock %}
        {% block meta_keywords %}{% endblock %}
        {% block stylesheets %}

        {% stylesheets  filter='?yui_css' output='css/frontend.components.min.css' 
                'css/jquery-ui.css'
                'css/bootstrap.css'
                'js/shadowbox/shadowbox.css'
                'css/frontend.css'
            %}
            <link rel="stylesheet" type="text/css" media="screen" href="{{ asset_url }}" />
        {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <!--[if gte IE 9]>
            <style type="text/css">
              .gradient {
                 filter: none;
              }
            </style>
        <![endif]-->

<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?sensor=false"></script>

        <script type="text/javascript">
            var _gaq = _gaq || [];
            _gaq.push(['_setAccount', 'UA-25919092-1']);
            _gaq.push(['_trackPageview']);

            (function() {
                var ga = document.createElement('script');
                ga.type = 'text/javascript';
                ga.async = true;
                ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
                var s = document.getElementsByTagName('script')[0];
                s.parentNode.insertBefore(ga, s);
            })();
        </script>
        

    </head>
    <body>
        <div itemscope itemtype="http://schema.org/LocalBusiness"  id="main_container">
            <div class="row-fluid" id="header">
                <div class="span12">
                    <div class="float_block" id="logotype_block">
                        <a href="/">
                            <img itemprop="image" src="/images/logotype.png" alt="Wifinder"/>
                        </a>
                    </div>
                    <div class="float_block" id="slogan_block">
                        {% render(controller( "FrontendContentBundle:WebItem:renderItem", {"alias" : "slogan"})) %}
                    </div>
                    <div class="float_block" id="search_block">
{#                        {% render "FrontendContentBundle:Content:search" %}#}
                    </div>
                    <div id="info_block">
                        <div id="registration_box">
{#                            <a class="login_link" href="#" onclick="alert('{% trans from 'content'%}Access is denied!{% endtrans %}')">{% trans from 'content'%}Login{% endtrans %}</a> | <a class="registration_link" href="#" onclick="alert('{% trans from 'content'%}Access is denied!{% endtrans %}')">{% trans from 'content'%}Registration{% endtrans %}</a>#}
                        </div>
                        <div id="language_switcher">
{#                            {% render(controller( "FrontendContentBundle:Menu:languageSwitcher", {'request' : app.request})) %}#}
                        </div>
                        <div id="contacts_box">
                            {% render(controller( "FrontendContentBundle:WebItem:renderItem", {"alias" : "phone"})) %}
                        </div>
                    </div>
                </div>
                {% render(controller( "FrontendContentBundle:Menu:topMenu", {"alias" : "main"})) %}
            </div>
            {% block slider %}{% endblock %}
            <div class="container-fluid" id="content">
                <div class="row-fluid"> 
                    {% block body %}{% endblock %}
                </div>
            </div>
            {% block carousel %}{% endblock %}
            {% block news_homepage %}{% endblock %}
            <div id="footer">
                {% include "FrontendContentBundle:Content:_footer.html.twig" %}
            </div>
        </div>

        {% block javascripts %}
            <script src="http://yandex.st/share/share.js" charset="utf-8" type="text/javascript"></script>
            {% javascripts filter='?yui_js' output='js/frontend.components.min.js'
                'js/jquery-1.9.1.js'
                'js/jquery-ui.js'
                'js/bootstrap.min.js'
                'js/jquery.treeview.js'
                'js/jquery.cookie.js'
                'js/jquery.placeholder.min.js'
                'js/jquery.maskedinput.min.js'
                'js/jquery.textchange.min.js'
                'js/shadowbox/shadowbox.js'
            %}
            <script type="text/javascript" src="{{ asset_url }}"></script>
            {% endjavascripts %}
            
            <script src="{{ asset('js/frontend.js') }}" type="text/javascript"></script>
        {% endblock %}
            
        {% render(controller( "FrontendContentBundle:Callback:newCallback"))%}
        
