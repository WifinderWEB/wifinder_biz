<div class="btn-group  btn-group-vertical">
    <a class="btn btn-small" href="{{ path('admin_image_gallery_index', { 'category_id': entity.id }) }}">
        <i class="icon-list"></i> {% trans from 'admin'%}show images{% endtrans %}</a>
    <a class="btn btn-small" href="{{path('admin_image_gallery_new', { 'category_id': entity.id }) }}">
        <i class="icon-plus-sign"></i> {% trans from 'admin'%}add image{% endtrans %}</a>
    <a class="btn btn-small" href="{{ path('admin_image_gallery_category_edit', { 'id': entity.id }) }}">
        <i class="icon-edit"></i> {% trans from "admin" %}edit{% endtrans %}
    </a>
    <form action="{{ path('admin_image_gallery_category_delete', { 'id': entity.id }) }}" method="post"  class="delete_form" id="delete_form_{{entity.id}}">
         <input type="hidden" id="form_id" name="form[id]" value="{{entity.id}}">
         <input type="hidden" id="form__token" name="form[_token]" value="{{delete_form._token.vars.value}}">
    </form>
    <a href="#deleteImageCategoryModal_{{entity.id}}" role="button" class="btn btn-small btn-danger" data-toggle="modal">
        <i class="icon-trash icon-white"></i> {% trans from "admin" %}delete{% endtrans %}
    </a>
</div>
{% include "ImageGalleryBundle:ImageCategory:_modalDeleteImageCategory.html.twig" with {'id' : entity.id, 'title' : entity.title}%}
