<div class="btn-group">
    <a class="btn btn-small" href="{{ path('admin_news_item_edit', { 'category_id' : category_id, 'id': entity.id }) }}">
        <i class="icon-edit"></i> {% trans from 'admin'%}edit{% endtrans %}</a>
    <form action="{{ path('admin_news_item_delete', { 'category_id' : category_id, 'id': entity.id }) }}" method="post"  class="delete_form" id="delete_form_{{entity.id}}">
         <input type="hidden" id="form_id" name="form[id]" value="{{entity.id}}">
         <input type="hidden" id="form__token" name="form[_token]" value="{{delete_form._token.vars.value}}">
    </form>
    <a href="#modalDelete_{{entity.id}}" role="button" class="btn btn-small btn-danger" data-toggle="modal">
        <i class="icon-trash icon-white"></i> {% trans from 'admin'%}delete{% endtrans %}
    </a>
</div>
{% include "NewsBundle:NewsItem:_modalDelete.html.twig" with {'id' : entity.id, 'title' : entity.title}%}