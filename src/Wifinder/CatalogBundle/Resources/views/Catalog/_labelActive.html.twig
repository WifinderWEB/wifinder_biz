{% if(entity.isActive) %}
   <button class="btn btn-small btn-info is_active change_catalog_{{entity.id}}" type="button" 
           onclick="FormAction.chengeActive('{{path ('admin_catalog_change_active')}}', {{entity.id}}, 1)" title='{% trans from "admin" %}Change status{% endtrans %}'>
       <i class="icon-ok icon-white"></i>
   </button>
{% else %}
   <button class="btn btn-small btn-warning is_active change_catalog_{{entity.id}}" type="button"
           onclick="FormAction.chengeActive('{{path ('admin_catalog_change_active')}}', {{entity.id}}, 0)" title='{% trans from "admin" %}Change status{% endtrans %}'>
       <i class="icon-ban-circle icon-white"></i>
   </batton>
{% endif %}