{% extends '::_adminContainer.html.twig' %}

{% block title %}{% trans with {'%id%' : entity.id } from 'admin'%}Callback edit - "%id%"{% endtrans %}{% endblock %}

{% block titlePage %}{% trans with {'%id%' : entity.id } from 'admin'%}Callback edit - "%id%"{% endtrans %}{% endblock %}

{% block content %}
    <form action="{{ path('admin_review_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}  class="main_form">
        {{ form_widget(edit_form) }}
    </form>
    <form action="{{ path('admin_review_delete', { 'id': entity.id }) }}" method="post" class="delete_form" id="delete_form_{{entity.id}}">
        {{ form_widget(delete_form) }}
    </form>
    {% include "CallbackBundle:Callback:_modalDeleteCallback.html.twig" with {'id' : entity.id}%}
{% endblock %}

{% block sidebar %}
    {% include "CallbackBundle:Callback:_editFormActions.html.twig" %}
{% endblock %}