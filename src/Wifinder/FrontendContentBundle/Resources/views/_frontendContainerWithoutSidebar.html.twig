{% extends '::base.html.twig' %}

{% block body %}
    <div class="row-fluid">
        {% block breadCrumb %}
            {% render(controller( "FrontendContentBundle:Menu:breadCrumb", {"alias" : content.alias })) %}
        {% endblock %}
    </div>
    <div class="row-fluid">
        <div class="span2">
            <div id="sidebar_left">
                {% block sidebar %}{% endblock %}
            </div>
        </div>
        <div class="span10" id="main_content">

            <h1>{% block titlePage%}{% endblock %}</h1>

            {% block content %}{% endblock %}
        </div>
    </div>
{% endblock %}
{% if content is defined and content.alias == 'contacts'%}
    {% block javascripts %}
        {{parent()}}
        <script src="{{ asset('/js/jquery.flexslider-min.js') }}" type="text/javascript"></script>
        <script type="text/javascript">Frontend.InitCarouselBrands();</script>
    {% endblock%}
    {% block stylesheets %}
        {{parent()}}
        <link href="{{ asset('/css/flexslider.css') }}" type="text/css" rel="stylesheet" />
    {% endblock %}
    {% block carousel %}
       {% render(controller( "FrontendContentBundle:Catalog:caruselBrands", {"alias" : "brands"})) %}
    {% endblock %}
{% endif %}
