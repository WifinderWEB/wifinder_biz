{% if items|length > 0 %}
<ul class="last_news">
    {% for item in items %}
        <li>
            <div class="data_publish">{{ item.publish|date("d.m.Y") }}</div>
            <a href="{{item.category.alias|localeLink("/news/")}}/{{item.alias}}" class="title_news">{{item.title}}</a>
        </li>
    {% endfor %}
</ul>
