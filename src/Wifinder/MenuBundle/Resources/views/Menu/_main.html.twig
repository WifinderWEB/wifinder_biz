<div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
        <span class="brand">Wifinder {% trans from 'admin'%}admin panel{% endtrans %}</span>
        <ul class="nav">
        {% for item in items %}
            {% if item.child is defined %}
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{item.title}} <b class="caret icon-white"></b></a>
                    <ul class="dropdown-menu">
                        {% for one in item.child %}
                            <li>
                                <a href="{{ path( one.link )}}">{{ one.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </li>
            {% else %}
                <li>
                    <a href="{{ path( item.link )}}">{{ item.title }}</a>
                </li>
            {% endif %}
        {% endfor %}
        </ul>
        <ul class="nav pull-right">
            <li>
                 <a href="{{ path('_wifinder_logout') }}">
                     <i class="icon-off icon-white"></i> {% trans from 'admin'%}Logout{% endtrans %}
                 </a>
            </li>
        </ul>
        <span class="pull-right" id="user_login">{% trans from 'admin'%}logged in as{% endtrans %} <strong>{{ app.user ? app.user.username : 'Anonymous' }}</strong></span>
    </div>
</div>