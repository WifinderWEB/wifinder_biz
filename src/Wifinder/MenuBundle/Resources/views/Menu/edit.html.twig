{% extends '::_adminContainer.html.twig' %}

{% block title %}{% trans with {'%name%' : entity.name } from 'admin'%}Menu edit - "%name%"{% endtrans %}{% endblock %}

{% block titlePage %}{% trans with {'%name%' : entity.name } from 'admin'%}Menu edit - "%name%"{% endtrans %}{% endblock %}

{% block content %}
    <form action="{{ path('admin_menu_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}  class="main_form">
        {{ form_widget(edit_form) }}
    </form>
    <form action="{{ path('admin_menu_delete', { 'id': entity.id }) }}" method="post" class="delete_form" id="delete_form_{{entity.id}}">
        {{ form_widget(delete_form) }}
    </form>
    {% include "MenuBundle:Menu:_modalDeleteMenu.html.twig" with {'id' : entity.id}%}
{% endblock %}

{% block sidebar %}
    {% include "MenuBundle:Menu:_editFormActions.html.twig" %}
{% endblock %}