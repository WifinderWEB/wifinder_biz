{% extends '::_adminContainer.html.twig' %}

{% block title %}{% trans with {'%title%':entity.title} from 'admin'%}Menu Item edit - "%title%"{% endtrans %}{% endblock %}

{% block titlePage %}{% trans with {'%title%':entity.title} from 'admin'%}Menu Item edit - "%title%"{% endtrans %}{% endblock %}

{% block content %}
    <form action="{{ path('admin_menu_item_update', { 'menu_id': entity.menu.id, 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} class="main_form">
        {{ form_widget(edit_form) }}
    </form>

    <form action="{{ path('admin_menu_item_delete', { 'menu_id': entity.menu.id, 'id': entity.id }) }}" method="post" class="delete_form" id="delete_form_{{entity.id}}">
        {{ form_widget(delete_form) }}
    </form>
    {% include "MenuBundle:MenuItem:_modalDeleteMenu.html.twig" with {'id' : entity.id, 'title' : entity.title}%}
{% endblock %}

{% block sidebar %}
    {% include "MenuBundle:MenuItem:_editFormActions.html.twig" %}
{% endblock %}